manifest {
  name = 'autodiff-experiments'
  author = 'Mathieu Fourment'
  homePage = 'https://github.com/4ment/autodiff-experiments'
  description = 'Benchmarking of automatic and analytical differentiation'
  mainScript = 'main.nf'
}

// COMPUTATIONAL PLATFORM SETUP
profiles {
    rhino {
        process {
            executor = 'slurm'
            scratch = '/fh/scratch/delete30/matsen_e/mathieu/temp/nf-scratch/'
            queue = 'campus-new'
            cpus = 3
            memory = 20.GB
            container = 'docker://4ment/autodiff-experiments'
            time = '200h'

            withLabel: normal {
                time = '5h'
            }
            withLabel: fast {
                cpus=2
                time = '60m'
            }
            withLabel: ultrafast{
                cpus=2
                time = '5m'
            }
        }

        //process {
        //    executor = 'slurm'
        //    //withLabel: auto_diff_exp {
        //    container = 'quay.io/matsengrp/autodiff-experiments'
        //    //}
        //}

        singularity {
            enabled = true
            autoMounts = true
            cacheDir = '/fh/scratch/delete30/matsen_e/mathieu/temp/containers/'
            runOptions = '--contain -W /tmp/'
        }
    }
}
